name: 003 - Different runners

on:
  push:
    branches: [ main, gha-devel ]
    paths: [ ".github/workflows/003*.yml" ]


jobs:
  ubuntu-job:
    runs-on: ubuntu-latest
    steps:
      - name: Where am I running?
        run: uname

  mac-job:
    run-on: mac-latest
    steps:
      - name: Where am I running?
        run: uname

  windows-job:
    runs-on: windows-latest
    steps:
      - name: Where am I running?
        shell: cmd  # Use cmd instead of Powershell
        run: ver
